{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-solution",
			"type": "shell",
			"command": "dotnet build ${workspaceFolder}/ArticlesSite.slnx",
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "trust-dev-certs",
			"type": "shell",
			"command": "dotnet dev-certs https --trust",
			"group": "none"
		},
		{
			"label": "prelaunch-all",
			"dependsOn": [
				"trust-dev-certs",
				"build-solution"
			],
			"dependsOrder": "sequence",
			"group": "none"
		},
		{
			"label": "run-web-app",
			"type": "shell",
			"command": "dotnet run --project src/Web/Web.csproj",
			"isBackground": true,
			"group": "none"
		},
		{
			"label": "build-web-tests-unit",
			"type": "shell",
			"command": "dotnet build e:\\github\\ArticlesSite\\tests\\Web.Tests.Unit\\Web.Tests.Unit.csproj"
		},
		{
			"label": "build-web-tests-unit",
			"type": "shell",
			"command": "dotnet build e:\\github\\ArticlesSite\\tests\\Web.Tests.Unit\\Web.Tests.Unit.csproj"
		},
		{
			"label": "restore-web-tests-unit",
			"type": "shell",
			"command": "dotnet restore e:\\github\\ArticlesSite\\tests\\Web.Tests.Unit\\Web.Tests.Unit.csproj"
		}
	]
}