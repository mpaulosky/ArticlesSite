@inherits LayoutComponentBase

<div class="antialiased bg-gray-800 text-gray-100">
	<div class="flex flex-col min-h-screen space-y-4">
		<NavMenuComponent />

		<main class="container flex-1 max-w-7xl px-4 mx-auto space-y-2 xl:max-w-7xl">
			<ErrorBoundary>
				<ChildContent>
					@Body
				</ChildContent>

				<ErrorContent>
					<!-- Error UI -->
					<div id="blazor-error-ui" class="hidden fixed
					bottom-0 left-0 right-0 z-50bg-yellow-100 dark:bg-yellow-900 shadow-lg
					border-t-2 border-yellow-400 dark:border-yellow-600 px-5 py-3 transition-colors duration-200" data-nosnippet>
						<div class="flex items-center justify-between">
							<span class="text-gray-900 dark:text-gray-100">
								An unhandled error has occurred.
								<a href="." class="text-blue-600 dark:text-blue-400 hover:underline ml-2">Reload</a>
							</span>
							<button class="text-gray-900 dark:text-gray-100 hover:text-red-600 dark:hover:text-red-400
							transition-colors duration-200" onclick="document.getElementById('blazor-error-ui').style.display='none'">
								🗙
							</button>
						</div>
					</div>
				</ErrorContent>
			</ErrorBoundary>
		</main>
		<footer>
			<FooterComponent />
		</footer>

	</div>
</div>

@code {

	private static int GetErrorCode(Exception? exception)
	{
		if (exception is null)
			return 500;

		return exception switch
		{
			UnauthorizedAccessException => 401,
			ArgumentException => 400,
			KeyNotFoundException => 404,
			_ => 500
		};
	}

}