<header class="mb-6 py-4">

	@switch (Level)
	{
		case "1":

			<h1 class="@($"text-3xl font-semibold tracking-tight py-4")">@HeaderText</h1>

			break;

		case "2":

			<h2 class="@($"text-2xl font-semibold tracking-tight py-4")">@HeaderText</h2>

			break;

		case "3":

			<h3 class="@($"text-1xl font-semibold tracking-tight py-4")">@HeaderText</h3>

			break;

		case "4":

			<h4 class="@($"text-lg font-semibold tracking-tight py-4")">@HeaderText</h4>

			break;

		case "5":

			<h5 class="@($"text-md font-semibold tracking-tight py-4")">@HeaderText</h5>

			break;
	}

</header>

@code {

	[Parameter] public string HeaderText { get; set; } = "My Blog";

	[Parameter] public string Level { get; set; } = "1";

}
