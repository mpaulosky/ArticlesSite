@page "/articles"

@inject GetArticles.IGetArticlesHandler ArticlesHandler
@inject NavigationManager Navigation
@inject ILogger<ArticlesList> Logger
@inject AuthenticationStateProvider AuthStateProvider

<div class="container-card mb-4 flex items-center justify-between">

	<h1 class="text-2xl font-bold text-gray-100">All Articles</h1>

	<label class="flex items-center text-gray-300">
		<input type="checkbox" @bind="ShowMyArticlesOnly" class="mr-2" />
		Show My Articles Only
	</label>
	
	<label class="flex items-center text-gray-300">
		<input type="checkbox" @bind="IncludeArchived" class="mr-2" />
		Include Archived
	</label>

	@if (_canCreate)
	{
		<button class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700" @onclick="CreateNewArticle">Create
			New Article</button>
	}
</div>

@if (_isLoading)
{
	<LoadingComponent />
}
else if (_errorMessage != null)
{
	<ErrorAlertComponent Title="Error loading articles">
		@_errorMessage
	</ErrorAlertComponent>
}
else if (_articles == null || !_articles.Any())
{
	<div class="bg-gray-700 rounded-lg p-8 text-center">
		<p class="text-gray-300 text-lg mb-4">No articles available yet.</p>
		<p class="text-gray-400">Check back soon for new content!</p>
	</div>
}
else
{
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		@foreach (var article in _articles)
		{
			<div class="container-card bg-gray-700 rounded-lg shadow-lg p-6 flex flex-col justify-between min-h-[260px]">
				@if (!string.IsNullOrEmpty(article.CoverImageUrl))
				{
					<img src="@article.CoverImageUrl" alt="@article.Title" style="width:100%;height:33%;object-fit:cover;" />
				}
				<div>
					<h2 class="text-xl font-bold text-blue-300 mb-2">@article.Title</h2>
					<p class="text-gray-200 mb-2" title="@article.Introduction">
						<span class="font-semibold text-gray-400">Intro:</span> @article.Introduction
					</p>
					<div class="mb-2">
						<span class="font-semibold text-gray-400">Author:</span> <span
							class="text-gray-100">@article.Author?.Name</span>
					</div>
					<div class="mb-2">
						<span class="font-semibold text-gray-400">Category:</span> <span
							class="text-gray-100">@article.Category?.CategoryName</span>
					</div>
					<div class="mb-2">
						<span class="font-semibold text-gray-400">Published:</span> <span class="text-gray-100">@(article.IsPublished ?
												"Yes" : "No")</span>
					</div>
					<div class="mb-2">
						<span class="font-semibold text-gray-400">Archived:</span> <span class="text-gray-100">@(article.IsArchived ?
												"Yes" : "No")</span>
					</div>
				</div>
				<div class="mt-4 flex gap-2">
					<button class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600"
						@onclick="() => GoToDetails(article.Id)">Details</button>

					<button class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600" @onclick="() => GoToEdit(article.Id)"
						disabled="@article.CanEdit">Edit</button>
				</div>
			</div>
		}
	</div>
}

@code {

	private IEnumerable<ArticleDto>? _articles;
	private IEnumerable<ArticleDto>? _allArticles;
	private bool _showMyArticlesOnly;
	private bool _includeArchived;
	private bool _isLoading = true;
	private string? _errorMessage;
	private bool _canCreate;

	public bool ShowMyArticlesOnly
	{
		get => _showMyArticlesOnly;
		set
		{
			if (_showMyArticlesOnly != value)
			{
				_showMyArticlesOnly = value;
				_ = ApplyFilters();
			}
		}
	}

	public bool IncludeArchived
	{
		get => _includeArchived;
		set
		{
			if (_includeArchived != value)
			{
				_includeArchived = value;
				_ = ApplyFilters();
			}
		}
	}

	protected override async Task OnInitializedAsync()
	{
		Logger?.LogInformation("Loading articles list");

		_isLoading = true;
		_errorMessage = null;

		try
		{
			// Get current user for authorization
			var authState = await AuthStateProvider.GetAuthenticationStateAsync();
			var user = authState.User;

			// Determine if user is Admin or Author
			var isAdmin = user.IsInRole("Admin");
			var isAuthor = user.IsInRole("Author");
			_canCreate = isAdmin || isAuthor;

			// Fetch articles
			var result = await ArticlesHandler.HandleAsync();
			if (result.Success)
			{
				_allArticles = result.Value;
				_articles = _allArticles;
				_errorMessage = null;

				Logger?.LogInformation("Articles loaded successfully. Count: {Count}", _articles?.Count() ?? 0);
			}
			else
			{
				_articles = null;
				_errorMessage = result.Error ?? "Failed to load articles.";

				Logger?.LogWarning("Failed to load articles. Error: {Error}", _errorMessage);
			}
		}
		catch (Exception ex)
		{
			_errorMessage = $"Unexpected error: {ex.Message}";
			Logger?.LogError(ex, "Unexpected error while loading articles.");
		}
		finally
		{
			_isLoading = false;
		}
	}

	private void GoToDetails(object id)
	{
		Navigation.NavigateTo($"/articles/details/{id}");
	}

	private void GoToEdit(object id)
	{
		Navigation.NavigateTo($"/articles/edit/{id}");
	}

	private void CreateNewArticle()
	{
		Navigation.NavigateTo("/articles/create");
	}

	private async Task ApplyFilters()
	{
		if (_allArticles == null) return;

		var filteredArticles = _allArticles.AsEnumerable();

		// Filter by archived status
		if (!_includeArchived)
		{
			filteredArticles = filteredArticles.Where(a => !a.IsArchived);
		}

		// Filter by current user's articles
		if (_showMyArticlesOnly)
		{
			var authState = await AuthStateProvider.GetAuthenticationStateAsync();
			var user = authState.User;
			var currentUserId = user.FindFirst("sub")?.Value ?? user.FindFirst("id")?.Value;

			if (!string.IsNullOrEmpty(currentUserId))
			{
				filteredArticles = filteredArticles.Where(a => a.Author?.UserId == currentUserId);
			}
		}

		_articles = filteredArticles;
		StateHasChanged();
	}
}